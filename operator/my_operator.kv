<FlatButton@ButtonBehavior+Label>:
    font_size: 14
<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.3,.3,.8, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'ProgKörny Beadandó'
            size_hint_x: .9
            bold: True
            rgba: (1,1,1, 1)
        FlatButton:
            id: Loggedin_user
            text: 'kdpeq8'
            rgba: (1,1,1, 1)
    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item'
            background_normal: ''
            background_color: (.35,.35,.85, 1)
            size_hint_x: .4
        Button:
            id: current_products
            text: 'Default Product'
            background_normal: ''
            background_color: (.4,.4,.85, 1)
        Button:
            id: current_price
            text:'0.00'
            background_normal: ''
            background_color: (.45,.45,.85, 1)
            size_hint_x: .2
    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: 'vertical'
            size_hint_x: .8
            spacing: 10
            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (.5,.5,.85, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                FlatButton:
                    text: 'Quantity'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Code'
                    size_hint_x: .3
                FlatButton:
                    text: 'Discount'
                    size_hint_x: .1
                FlatButton:
                    text: 'Discount %'
                    size_hint_x: .1
                FlatButton:
                    text: 'VAT'
                    size_hint_x: .1
                FlatButton:
                    text: 'Price'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Total'
                    size_hint_x: .2
            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                spacing: 5
                TextInput:
                    id: quantity_input
                    size_hint_x: .1
                TextInput:
                    id: product_code_input
                    size_hint_x: .3
                    multiline: False
                    on_text_validate: root.update_purchases()
                TextInput:
                    id: discount_input
                    size_hint_x: .1
                TextInput:
                    id: discount_percentage_input
                    size_hint_x: .1
                TextInput:
                    id: vat_input
                    size_hint_x: .1
                TextInput:
                    id: price_input
                    size_hint_x: .1
                TextInput:
                    id: product_total_input
                    size_hint_x: .2
            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (.55,.55,.9, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Code'
                        size_hint_x: .2
                    Label:
                        text: 'Product Name'
                        size_hint_x: .3
                    Label:
                        text: 'Quantity'
                        size_hint_x: .1
                    Label:
                        text: 'Discount'
                        size_hint_x: .1
                    Label:
                        text: 'Price'
                        size_hint_x: .1
                    Label:
                        text: 'Product Total'
                        size_hint_x: .2
                GridLayout:
                    id: products
                    cols: 1
        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .2    
            
            TextInput:
                id: receipt_preview
                readonly: True
                text: 'Business Name\n66 Main St\nCity \nTel: 06-90-123-4567 \nReceipt No: \nDate: \n\n'