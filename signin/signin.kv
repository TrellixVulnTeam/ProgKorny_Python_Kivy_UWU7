<FlatButton@ButtonBehavior+Label>:
    font_size: 16
<SignInWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.3,.3,.8, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Login"
            bold: "True"
            size_hint_x: .97
        FlatButton:
            text: "X"
            size_hint_x: .03
    BoxLayout:
        orientation: "vertical"
        padding: main_win.space_x, 10
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: usr_field
                hint_text: "Username"
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Sign In"
            size_hint_y: None
            height: 40
            background_color: (.3,.3,.8,1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2